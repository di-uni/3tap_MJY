<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvStepCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerInParent="true"
        android:text="Step Count : 0"
        android:textSize="30dp"
        android:textColor="#919191"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="295dp"
        android:fontFamily="@font/open_sans_family"/>

    <TextView
        android:id="@+id/kcalCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvStepCount"
        android:layout_centerInParent="true"
        android:text="Consumed 0 kcal"
        android:textSize="27dp"
        android:textColor="#919191"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="352dp"
        android:fontFamily="@font/open_sans_family"/>

    <Button
        android:id="@+id/resetbutton"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_below="@+id/kcalCount"
        android:layout_centerInParent="true"
        android:layout_marginTop="31dp"
        android:background="@android:color/black"
        android:fontFamily="@font/open_sans_family"
        android:text="reset"
        android:textSize="18dp"
        android:textColor="@android:color/white"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="414dp" />


    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginLeft="123dp"
        android:layout_marginTop="130dp"
        android:scaleX="2"
        android:scaleY="2"
        android:src="@drawable/ic_launcher_green"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="158dp" />

    <ImageView
        android:id="@+id/prize"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ddabong4"
        />




</RelativeLayout>